<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="smoke" parallel="tests">

    <test name="UI Smoke" thread-count="2">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <packages>
            <package name="ui"/>
        </packages>
    </test>

    <test name="API Smoke" thread-count="10">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="api"/>
            </run>
        </groups>
        <packages>
            <package name="api"/>
        </packages>
    </test>

</suite>
