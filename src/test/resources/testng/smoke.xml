<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="smoke" parallel="tests">

    <listeners>
        <listener class-name="utils.TestListener"/>
        <listener class-name="utils.RetryListener"/>
    </listeners>

    <test name="UI Smoke" thread-count="2">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <packages>
            <package name="ui"/>
        </packages>
    </test>

    <test name="API Smoke" thread-count="6">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="api"/>
            </run>
        </groups>
        <packages>
            <package name="api"/>
        </packages>
    </test>

</suite>
