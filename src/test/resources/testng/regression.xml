<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="regression" parallel="classes">

    <listeners>
        <listener class-name="utils.TestListener"/>
        <listener class-name="utils.RetryListener"/>
    </listeners>

    <test name="UI Regression" thread-count="2">
        <groups>
            <run>
                <include name="regression"/>
                <include name="ui"/>
            </run>
        </groups>
        <packages>
            <package name="ui"/>
        </packages>
    </test>

    <test name="API Regression" thread-count="3">
        <groups>
            <run>
                <include name="regression"/>
                <include name="api"/>
            </run>
        </groups>
        <packages>
            <package name="api"/>
        </packages>
    </test>

</suite>